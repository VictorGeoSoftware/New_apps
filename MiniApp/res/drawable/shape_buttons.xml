<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#33CEF6F5" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FFCEF6F5" />
            <corners
                android:radius="20dip" />
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item>

</selector>
